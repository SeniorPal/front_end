<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/ll_main_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/view_bg_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_card_background"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Wakeup"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="120dp"
                    android:paddingRight="50dp"
                    />

                <RadioGroup
                    android:id="@+id/language"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/chinese"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:text="中文"/>
                    <RadioButton
                        android:id="@+id/english"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="English"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_card_background"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_margin="2dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#0A000000"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <Spinner
                            android:id="@+id/sp_main_model"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:popupBackground="@drawable/spinner_dropdown_background"
                            android:popupElevation="0dp"
                            android:spinnerMode="dropdown" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_settings"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="#FFFFFF"
                        android:foreground="@drawable/settings_btn"
                        app:cardBackgroundColor="#00DADADA"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_image_input"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="#FFFFFF"
                        android:foreground="@drawable/image"
                        app:cardBackgroundColor="#00DADADA"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp" />

                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#A5A5A5" />

                <ScrollView
                    android:id="@+id/sv_chat_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/ll_chat_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_chat_notice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp"
                            android:text="@string/default_greeting_spaceholder"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>
                </ScrollView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#0C000000"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/ll_template_params"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="#C5C5C5"
                        android:dividerPadding="10dp"
                        android:orientation="vertical"
                        android:showDividers="middle" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/tabs_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#19000000"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:contentPadding="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="5dp">

                            <!--                    <ImageButton-->
                            <!--                        android:id="@+id/bt_voice_input"-->
                            <!--                        android:layout_width="35dp"-->
                            <!--                        android:layout_height="match_parent"-->
                            <!--                        android:layout_weight="0"-->
                            <!--                        android:background="#00FFFFFF"-->
                            <!--                        android:scaleType="fitCenter"-->
                            <!--                        android:src="@android:drawable/ic_btn_speak_now" />-->

                            <EditText
                                android:id="@+id/et_user_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:layout_weight="1"
                                android:background="#00FFFFFF"
                                android:ems="10"
                                android:gravity="start|top"
                                android:hint="@string/text_input_hint"
                                android:inputType="textMultiLine"
                                android:maxHeight="150dp"
                                android:textColorHint="#838383"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <ImageButton
                        android:id="@+id/bt_send"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="#00FFFFFF"
                        android:scaleType="centerInside"
                        android:src="@drawable/send_btn"
                        android:clickable="false"
                        android:focusable="true"/>
                </LinearLayout>

            </LinearLayout>
            <!--    <TextView-->
            <!--        android:id="@+id/text"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="match_parent"-->
            <!--        android:text="Hello World!"-->
            <!--        android:gravity="center"-->
            <!--        android:textSize="20sp"-->
            <!--        app:layout_constraintBottom_toBottomOf="parent"-->
            <!--        app:layout_constraintEnd_toEndOf="parent"-->
            <!--        app:layout_constraintStart_toStartOf="parent"-->
            <!--        app:layout_constraintTop_toTopOf="parent" />-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
